<div class='item'>
    <div class='ui tiny image'>
        <img src='{{ author.profileImage }}'>        
    </div>
    <div class='content'>
        <div class="header">
            <div class='ui checkbox'>
                <input type="checkbox" name="ids" value="{{_id}}">
                <label>
                    <a href="/timeline/{{ author._id }}">
                        {{ author.firstName }} {{ author.lastName }}</div>
                    </a>
                </label>
            </div>
        <div class="meta">@{{ author.userName }} | {{ formattedDate }}</div>
        <div class="description"><p>{{ text }}</p></div>    
        <div class="extra">
            <div class="ui large bordered image">
                <img src="{{ postedImage }}">
            </div>
        </div> 
    </div>
</div>